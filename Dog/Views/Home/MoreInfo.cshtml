@model Dog

@{
    ViewData["Title"] = $"About {Model.Name}";
}

<div class="container my-5">
    <div class="row">
        <div class="col-md-6">
            <h1>@Model.Name's Profile</h1>
            <img src="https://www.vidavetcare.com/wp-content/uploads/sites/234/2022/04/golden-retriever-dog-breed-info.jpeg" class="img-fluid rounded mb-4" alt="@Model.Name">
        </div>
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h3>Details</h3>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item"><strong>Breed:</strong> @Model.Breed</li>
                        <li class="list-group-item"><strong>Age:</strong> @Model.Age</li>
                        <li class="list-group-item"><strong>Favorite Food:</strong> @Model.FavoriteFood</li>
                        <li class="list-group-item"><strong>Favorite Toy:</strong> @Model.FavoriteToy</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div class="row mt-4">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <h3>About Me</h3>
                    <p>@Model.DetailedDescription</p>
                    <h4>Special Skills</h4>
                    <p>@Model.SpecialSkills</p>
                </div>
            </div>
        </div>
    </div>
</div>